<!-- app/view/orders/_line_item.html.erb -->

<div class="line-item">
  <%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name, class:  'img-thumbnail' %>
  <div class="product-details">
    <h3><%= line_item.product.name %></h3>
    <p><%= line_item.product.description %></p>
  </div>
  <div class="line-item-quantity">
    <p><strong>Quantity:</strong> <%= line_item.quantity %></p>
  </div>
  <div class="line-item-total">
    <p><strong>Total:</strong> <%= humanized_money_with_symbol line_item.quantity * line_item.product.price %></p>
  </div>
</div>