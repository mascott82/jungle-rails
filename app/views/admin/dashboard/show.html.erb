<h1>Admin::Dashboard#show</h1>
<p>Find me in app/views/admin/dashboard/show.html.erb</p>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <p class="card-text">Total Products: <%= @product_count %></p>
          <%= link_to 'View Products', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <p class="card-text">Total Categories: <%= @category_count %></p>
          <%= link_to 'View Categories', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>